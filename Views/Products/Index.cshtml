@model IEnumerable<ProductosSA.Entities.Products>

    <p> <a asp-action="Add" class="btn btn-primary">Crear nuevo producto</a></p>

    <table id="myTable" class="table table-striped table-bordered nowrap" style="border-collapse:collapse;border-spacing:0;width:100%;">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Costo</th>
                <th>Precio</th>
                <th>Estado</th>
                <th width="70%"></th>
            </tr>
        </thead>
        <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m=>item.Description)</td>
                <td>@Html.DisplayFor(m => item.Cost)</td>
                <td>@Html.DisplayFor(m => item.Price)</td>
                <td>@Html.DisplayFor(m => item.State)</td>
                <td>
                    <a a asp-actio="Edit" asp-route-id="@item.Id" class="btn btn-primary"></a>
                    <a href="#" class="btn btn-danger" data-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>

    </table>
   @section Scripts{
    <script>
        $(function(){
            $('#myTable').DataTable();
        });
    </script>
}
